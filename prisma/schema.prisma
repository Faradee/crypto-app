generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Favorite {
  cryptoId String

  userId String
  user   User   @relation(fields: [userId], references: [uuid], onDelete: Cascade)

  @@id([cryptoId, userId])
}

model Transaction {
  cryptoId  String
  price     Int
  createdAt DateTime @default(now())
  amount    Int
  userId    String
  user      User     @relation(fields: [userId], references: [uuid], onDelete: Cascade)

  @@id([cryptoId, userId])
}

model User {
  uuid         String        @id @default(uuid())
  email        String        @unique
  createdAt    DateTime      @default(now())
  password     String
  favorites    Favorite[]
  transactions Transaction[]
}
